<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:padding="20dp">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="With"
                android:id="@+id/tvWith" android:layout_gravity="left|center_vertical" android:paddingRight="20dp"/>
        <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="jalatif"
                android:id="@+id/etwName" android:editable="false" android:gravity="center"
                android:layout_gravity="center_horizontal|top"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Online"
                android:id="@+id/tvStatus" android:layout_gravity="center" android:paddingLeft="20dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:paddingTop="20dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Message"
                android:id="@+id/tvMessage" android:layout_gravity="center_vertical|left"/>
        <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etMessage" android:layout_gravity="center_horizontal|bottom" android:editable="true"
                android:enabled="true" android:hint="Enter the message"
                android:minLines="1" android:inputType="textMultiLine"/>
    </LinearLayout>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New EditText"
            android:id="@+id/editText"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Debug"
            android:id="@+id/tvDebug" android:layout_gravity="center"/>
</LinearLayout>

