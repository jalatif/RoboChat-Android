<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:padding="20dp" android:weightSum="10" android:background="@drawable/board">
    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="With"
                        android:id="@+id/tvWith" android:layout_gravity="left|center_vertical" android:paddingRight="20dp"/>
                <TextView
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:text="Username"
                        android:id="@+id/tvwUser" android:gravity="center" android:textColor="@android:color/holo_purple"
                        android:textSize="24dp"/>
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Online"
                        android:id="@+id/tvStatus" android:layout_gravity="center_vertical" android:paddingLeft="20dp"
                        android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" android:paddingTop="20dp" android:paddingBottom="50dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Message"
                        android:id="@+id/tvMessage" android:layout_gravity="center_vertical|left"/>
                <EditText
                        android:layout_width="155dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/etMessage" android:layout_gravity="center_horizontal|bottom" android:editable="true"
                        android:enabled="true" android:hint="Enter message"
                        android:minLines="1" android:inputType="textMultiLine"/>
                <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Send"
                        android:id="@+id/bSend" android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chat"
            android:id="@+id/textView" android:gravity="center"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lvChat" android:fastScrollEnabled="true" android:scrollingCache="true"
                android:smoothScrollbar="true" android:choiceMode="singleChoice"
                android:fastScrollAlwaysVisible="false" android:minHeight="50dp"/>
    </LinearLayout>
</LinearLayout>

